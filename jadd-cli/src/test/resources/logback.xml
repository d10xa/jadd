<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.github.tomakehurst.wiremock" level="WARN"/>
    <logger name="org.eclipse.jetty.util.log" level="WARN"/>
    <logger name="org.eclipse.jetty.server.Server" level="WARN"/>
    <logger name="org.eclipse.jetty.server.NetworkTrafficServerConnector" level="WARN"/>
    <logger name="org.eclipse.jetty.server.handler.ContextHandler" level="WARN"/>
    <logger name="/" level="WARN"/>

</configuration>